<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pooja.foodex.Add_Dish">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_dish_scroll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dishlistLayout"
        android:orientation="vertical">

    </LinearLayout>
    </ScrollView>

        <Button
        android:id="@+id/create_dish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_dish_scroll"
        android:text="@string/create_dish"/>

    <Button
        android:id="@+id/back_add_dish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_dish_btn"
        android:text="@string/back"/>
</RelativeLayout>